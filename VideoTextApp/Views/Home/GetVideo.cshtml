
@{
    ViewData["Title"] = "GetVideo";
}

<h3>upload video to Get Text</h3>
<br />

@if (Convert.ToBoolean(@ViewData["disbool"]))
{
    <div class="col-sm-10">
        <iframe width="500" height="300" src="https://csg1003200049146824.blob.core.windows.net/direct2sanjeev/US-National-Emergency-Announcement.mp4" frameborder="0" allow="accelerometer; @*autoplay;*@ encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
    </div>
}

<br />

<form method="post" enctype="multipart/form-data" asp-controller="Home" asp-action="GetVideo">
    <div class="form-group row">
        <div class="col-sm-10">
            <input type="file" name="uploadFile" />
            <br />
            @*<h4>Or Upload video Url Below</h4>
                <input type="url" name="uploadUrl" />*@
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-10">
            <input type="submit" value="Upload" />
        </div>
    </div>

</form>

<h4>@ViewData["message"]</h4>

<h4>@ViewData["DisplayText"]</h4>



